// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Conversation {
  id             String        @id @default(cuid())
  messages       Message[]  @relation("conversationMessages") // Specify the relation name
  picture        String?
  createdAt      DateTime   @default(now())
  participants   User[] 
}


model User {
  id String @id @default(cuid())
  name String
  email String @unique
  emailVerified DateTime?
  phonenumber    String
  status         String?
  password String?
  image String?
  conversations  Conversation[] 
}

model Message {
  id             String        @id @default(cuid())
  content        String
  dateOfSent     DateTime   @default(now())
  messageState   String
  conversation   Conversation? @relation("conversationMessages", fields: [id], references: [id])
}
